<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_orders_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="items Details"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        />
    <TextView
        android:id="@+id/textview_orders_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="10000"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        />

    <TextView
        android:id="@+id/textview_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="X"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/textview_orders_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_marginVertical="12dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        />


    <TextView
        android:id="@+id/textview_orders_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="123456"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.30"
        />

</TableRow>
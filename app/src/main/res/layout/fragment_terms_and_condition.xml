<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.TermsAndConditionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_brush_stroke"
            android:text="LEGALS"
            android:textAlignment="center"
            android:textColor="#650E08"
            android:textSize="30sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/terms_condition_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:rippleColor="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Condition"
                android:textSize="18dp"
                android:padding="8dp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/privacy_policy_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:rippleColor="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="18dp"
                android:padding="8dp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/refund_policy_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:rippleColor="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refund and Cancellation Policy"
                android:textSize="18dp"
                android:padding="8dp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/licences_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            android:clickable="true"
            app:rippleColor="@color/colorAccent"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Source Libraries &amp; Licences "
                android:textSize="18dp"
                android:padding="8dp"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</FrameLayout>